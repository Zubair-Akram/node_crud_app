<%- include('header.ejs') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissable fade show alert-<%= message.type %> d-flex justify-content-between" role="alert">
                    <strong><%= message.message %></strong>
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>
            
            <div class="table-responsive">
                <% if(users.length > 0) { %> <!-- Check if there are users -->
                    <table class="table table-striped text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>E-Mail</th>
                                <th>Phone</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                          <% users.forEach((row, index) => { %> <!-- Use 'users' here -->
                            <tr //>
                                <td><%= index + 1 %></td> <!-- Use index + 1 for user numbering -->
                                <td><img src="<%= row.image %>" width="50" class="img-thumbnail"></td>
                                <td><%= row.name %></td> 
                                <td><%= row.email %></td>
                                <td><%= row.phone %></td>
                                <td>
                                    <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                    <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                </td>                          
                            </tr>
                          <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No User found in the database!</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('footer.ejs') %>
